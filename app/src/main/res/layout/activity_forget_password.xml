<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundtop"
        tools:context=".ForgetPasswordActivity">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120sp"
            android:layout_marginTop="190sp"
            android:layout_alignParentTop="true"
            android:layout_height="120sp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/edutor" />
        <TextView
            android:id="@+id/wePlayChat"
            android:layout_width="wrap_content"
            android:layout_below="@id/imageView"
            android:padding="10dp"
            android:text="EDUTOR"
            android:textColor="#FFF"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
           />

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/enter_email"
            android:layout_width="200dp"
            android:layout_below="@+id/wePlayChat"
            android:inputType="textEmailAddress"
            android:textColor="#FFF"
            android:background="@drawable/rounded_borders"
            android:hint="Email Address"
            android:layout_height="50dp"
            android:drawableStart="@drawable/ic_action_email"
            android:layout_centerHorizontal="true"
            >

        </EditText>


        <androidx.cardview.widget.CardView
            android:layout_width="300sp"
            android:layout_height="50sp"
            app:cardCornerRadius="25sp"
            android:id="@+id/reset_pas"
            android:elevation="10sp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/colorPurple"
            android:layout_below="@+id/enter_email"
            android:layout_centerHorizontal="true"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Reset Pasword"
                    android:layout_centerVertical="true"
                    android:textColor="#FFFF"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content">

                </TextView>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>
